@model IEnumerable<Chushka.ViewModels.Models.ProductViewModel>

<div class="mt-3 mb-5">
    <div class="container-fluid text-center">
        <h2>Greetings, @this.User.Identity.Name!</h2>
        @if (this.User.IsInRole("Admin"))
        {
            <h4>Enjoy your work today!</h4>
        }
        else
        {
            <h4>Feel free to view and order any of our products.</h4>
        }
    </div>
    <hr class="hr-2 bg-dark" />
    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-5ths">

                <div class="chushka-bg-color text-center rounded m-3">
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id">
                        <div class="text-white px-5 py-3">
                            <h5>@item.Name</h5>
                            <hr class="hr-2 bg-white">
                            <div class="index-description">@item.Description</div>
                            <hr class="hr-2 bg-white">
                            <h5>$@item.Price</h5>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</div>