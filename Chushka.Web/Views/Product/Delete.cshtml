@model Chushka.ViewModels.Models.DeleteProductViewModel

<div class="mt-3 mb-5">
    <h1 class="text-center">Delete Product</h1>
    <hr class="hr-2 bg-dark" />
    <form class="mx-auto half-width" method="post">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input type="text" class="form-control" id="name" name="name" asp-for="Name" disabled>
        </div>
        <div class="form-group">
            <label asp-for="Price">Price</label>
            <input type="number" class="form-control" id="price" name="price" asp-for="Price" disabled>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea class="form-control" id="description" rows="4" name="description" asp-for="Description" disabled></textarea>
        </div>
        <h4 class="text-center">Product Type</h4>
        <hr class="hr-2 bg-dark half-width mt-4" />
        <div class="product-type-holder mt-4 d-flex justify-content-around">
            <div class="col">
                <input type="radio" id="food" value="Food" asp-for="Type">
                <label>Food</label>
            </div>
            <div class="col">
                <input type="radio" id="domestic" value="Domestic" asp-for="Type">
                <label>Domestic</label>
            </div>
            <div class="col">
                <input type="radio" id="health" value="Health" asp-for="Type">
                <label>Health</label>
            </div>
            <div class="col">
                <input type="radio" id="cosmetic" value="Cosmetic" asp-for="Type">
                <label>Cosmetic</label>
            </div>
            <div class="col">
                <input type="radio" id="other" value="Other" asp-for="Type">
                <label>Other</label>
            </div>
        </div>
        <hr class="hr-2 bg-dark half-width mt-4" />
        <div class="button-holder mt-2 d-flex w-25 mx-auto justify-content-between">
            <button type="submit" class="btn chushka-bg-color">Delete</button>
            <button type="submit" class="btn chushka-bg-color">Cancel</button>
        </div>
    </form>
</div>

